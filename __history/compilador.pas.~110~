unit compilador;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.ExtCtrls, Vcl.StdCtrls, Vcl.Buttons,
  AdvMemo, AdvSplitter, Vcl.Menus, Vcl.ComCtrls, propscrl;

type
  Tfrmcompilador = class(TForm)
    W7Panel1: TPanel;
    btnovo: TSpeedButton;
    btabrir: TSpeedButton;
    btsalvar: TSpeedButton;
    btcopiar: TSpeedButton;
    btcolar: TSpeedButton;
    btrecortar: TSpeedButton;
    btcompilar: TSpeedButton;
    btgerarcodigo: TSpeedButton;
    btequipe: TSpeedButton;
    mmEditor: TAdvMemo;
    spSepara: TSplitter;
    sbStatus: TStatusBar;
    mmMensagem: TMemo;
    procedure FormCreate(Sender: TObject);
  private
    { Private declarations }
    procedure plTrataScrollInicial;
  public
    { Public declarations }
  end;

var
  frmcompilador: Tfrmcompilador;

implementation

{$R *.dfm}

{ Tfrmcompilador }

procedure Tfrmcompilador.FormCreate(Sender: TObject);
begin
  plTrataScrollInicial;
end;

procedure Tfrmcompilador.plTrataScrollInicial;
var
 i : integer;
begin
  if mmEditor.IsEmpty then
  begin
    for i := 1 to 50 do
    begin
      mmEditor.Lines.Add(EmptyStr);
      mmMensagem.Lines.Add(EmptyStr);
      if (i = 49) then
      begin
        mmEditor.Lines.Add('                                                                                                                                                               ');
        mmMensagem.Lines.Add('hhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhh');
      end;
    end;
  end;
end;

end.
